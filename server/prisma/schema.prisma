generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id      Int       @id @default(autoincrement())

  email   String   @unique
  name    String
  securityNum Int
  birthDate String
  residency String

  profileImageUrl    String?
  willItems   WillItem[]
}

model WillItem {
  id      Int      @id @default(autoincrement())
  type    String

  personFirst  String
  personSecond  String
  personThird   String

  vehicleBrand  String?
  vehicleModel  String?
  vehicleColor  String?

  propertyName String?
  propertyAdress String?

  user  User @relation(fields: [id], references: [id])
}
